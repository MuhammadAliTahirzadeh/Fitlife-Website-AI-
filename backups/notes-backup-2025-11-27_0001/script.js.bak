// Global app instance
let app = null;

// Initialize when DOM is ready
if (document.readyState === 'loading') {
	document.addEventListener('DOMContentLoaded', initializeApp);
} else {
	initializeApp();
}

function initializeApp() {
	try {
		app = new FitLifeApp();
		window.app = app;
		console.log('FitLife app initialized successfully');
	} catch (error) {
		console.error('Error initializing FitLife app:', error);
		// Retry once after a short delay
		setTimeout(() => {
			try {
				app = new FitLifeApp();
				window.app = app;
				console.log('FitLife app initialized successfully on retry');
			} catch (retryError) {
				console.error('Failed to initialize FitLife app on retry:', retryError);
			}
		}, 100);
	}
}

// Navigation function
function navigateToPage(page) {
	window.location.href = page;
}

class FitLifeApp {
	constructor() {
		this.data = {
			workouts: this.safeParseJSON('fitlife_workouts') || [],
			meals: this.safeParseJSON('fitlife_meals') || [],
			notes: this.safeParseJSON('fitlife_notes') || [],
			settings: this.safeParseJSON('fitlife_settings') || {}
		};
		// Note: backup copy intentionally trimmed defaults to keep file smaller.
		if (!this.data.settings.theme) this.data.settings.theme = 'dark';
		if (!this.data.settings.accentColor) this.data.settings.accentColor = '#13ecc8';

		// Wait for DOM to be ready
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', () => this.init());
		} else {
			this.init();
		}
	}

